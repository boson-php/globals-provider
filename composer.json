{
    "name": "boson-php/globals-provider",
    "description": "Provides PHP superglobal converters and extractors",
    "type": "library",
    "license": "MIT",
    "homepage": "https://bosonphp.com",
    "support": {
        "issues": "https://github.com/boson-php/boson/issues",
        "source": "https://github.com/boson-php/globals-provider"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "boson-php/http-contracts": "^0.15",
        "psr/clock": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Boson\\Component\\GlobalsProvider\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "boson-php/http": "^0.15"
    },
    "autoload-dev": {
        "psr-4": {
            "Boson\\Component\\GlobalsProvider\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.15.x-dev",
            "dev-main": "0.15.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
